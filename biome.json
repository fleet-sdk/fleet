{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "ignore": [
      "**/coverage/*",
      "**/dist/*",
      "**/node_modules/*",
      "**/_test-vectors/mockedGraphQLBoxResponses.json"
    ],
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "lineWidth": 100
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
