{
  "name": "@fleet-sdk/core",
  "version": "0.1.0-alpha.6",
  "description": "Fleet SDK core library",
  "main": "build/lib/main/index.js",
  "typings": "build/lib/module/index.d.ts",
  "module": "build/lib/module/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fleet-sdk/core.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ergo",
    "blockchain",
    "transactions",
    "serialization"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "jest --coverage --coverageReporters=html ; open-cli coverage/index.html",
    "cov:json": "jest --coverage --coverageReporters=json",
    "cov:check": "jest --coverage --coverageReporters=text",
    "cov:send": "run-s cov:lcov && codecov",
    "ver:stable": "standard-version",
    "ver:alpha": "standard-version --prerelease alpha",
    "reset-hard": "git clean -dfx && git reset --hard && npm i"
  },
  "dependencies": {
    "@noble/hashes": "^1.1.3",
    "@scure/base": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.1.0",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "build/lib",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
